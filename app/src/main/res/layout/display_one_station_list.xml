<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regionTitleTextView"
        android:textSize="14sp"
        android:paddingTop="5dp"
        tools:text = "Ростовская область"
        android:textColor="@android:color/black"
        android:layout_below="@+id/stationTitileTextVIew"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="false"
        android:paddingRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stationTitileTextVIew"
        android:textSize="20sp"
        tools:text = "Авило-Успенка"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/regionTitleTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityTitleTextView"
        android:textSize="14sp"
        tools:text ="Таганрог"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/regionTitleTextView"
        android:layout_alignBottom="@+id/regionTitleTextView"
        android:layout_alignParentEnd="true"
        android:paddingLeft="20dp"
        android:layout_marginEnd="4dp"/>

</RelativeLayout>